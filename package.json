{
	"name": "feedreader",
	"version": "1.0.0",
	"description": "A simple and nice UI for reading RSS and ATOM feeds on Windows, Linux and Mac OS",
	"main": "./out/main.js",
	"author": "Yannick Fricke <yannickfricke@googlemail.com>",
	"homepage": "https://github.com/YannickFricke/FeedReader",
	"repository": {
		"type": "git",
		"url": "https://github.com/YannickFricke/FeedReader.git"
	},
	"license": "MIT",
	"productName": "FeedReader",
	"scripts": {
		"build:dev": "webpack-dev-server --config src/configs/webpack/webpack.dev.config.js",
		"build:prod": "webpack --config src/configs/webpack/webpack.prod.config.js",
		"commit": "git-cz",
		"coveralls": "jest --config src/configs/jest/jest.config.js --rootDir . --coverageReporters=text-lcov | coveralls",
		"lint": "tslint -c tslint.json --project tsconfig.json",
		"lint:fix": "tslint -c tslint.json --project tsconfig.json --fix",
		"package": "electron-builder build -wl",
		"prestart": "webpack --config src/configs/webpack/webpack.dev.config.js",
		"postinstall": "electron-builder install-app-deps",
		"release": "semantic-release",
		"start": "electron ./out/main.js",
		"test": "jest --config src/configs/jest/jest.config.js --rootDir .",
		"test:watch": "jest --config src/configs/jest/jest.config.js --rootDir . --watch"
	},
	"dependencies": {
		"moment": "^2.22.2"
	},
	"devDependencies": {
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/enzyme": "^3.1.15",
		"@types/enzyme-adapter-react-16": "^1.0.3",
		"@types/jest": "^23.3.9",
		"@types/node": "^10.12.10",
		"@types/react": "^16.7.6",
		"@types/react-dom": "^16.0.9",
		"@types/react-redux": "^6.0.10",
		"@types/redux": "^3.6.0",
		"@types/redux-mock-store": "^1.0.0",
		"@types/sweetalert": "^2.0.4",
		"awesome-typescript-loader": "^5.2.1",
		"commitizen": "^3.0.4",
		"concurrently": "^4.1.0",
		"coveralls": "^3.0.2",
		"css-loader": "^1.0.1",
		"cz-conventional-changelog": "^2.1.0",
		"electron": "^3.0.10",
		"electron-builder": "^20.36.2",
		"electron-devtools-installer": "^2.2.4",
		"enzyme": "^3.7.0",
		"enzyme-adapter-react-16": "^1.7.0",
		"enzyme-to-json": "^3.3.4",
		"file-loader": "^2.0.0",
		"gulp": "^3.9.1",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^1.2.0",
		"jest": "^23.6.0",
		"mini-css-extract-plugin": "^0.4.5",
		"node-sass": "^4.10.0",
		"react": "^16.6.3",
		"react-dom": "^16.6.3",
		"react-redux": "^5.1.1",
		"redux": "^4.0.1",
		"redux-mock-store": "^1.5.3",
		"sass-loader": "^7.1.0",
		"semantic-release": "^15.12.0",
		"semantic-ui-react": "^0.83.0",
		"style-loader": "^0.23.1",
		"sweetalert": "^2.1.2",
		"ts-jest": "^23.10.4",
		"tslint": "^5.11.0",
		"typescript": "^3.1.6",
		"url-loader": "^1.1.2",
		"webpack": "^4.26.0",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.10"
	},
	"build": {
		"appId": "com.github.yannickfricke.feedreader",
		"mac": {
			"category": "public.app-category.education",
			"icon": "src/icons/mac/icon.icns"
		},
		"files": [
			"out"
		],
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 240,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			],
			"icon": "src/icons/mac/icon.icns"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Education",
			"icon": "src/icons/png/"
		},
		"win": {
			"target": "nsis",
			"icon": "src/icons/png/256x256.png"
		}
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test && npm run lint"
		}
	}
}
