{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "pretty": true,
        "newLine": "LF",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": true,
        "jsx": "react"
    },
    "exclude": [
        "./dist",
        "./out",
        "./src/configs",
        "./code-cov/",
        "**/__tests__/**/*",
        "**/__mocks__/**/*",
        "**/__stories__/**/*",
        "storybook-static",
        "dangerfile.ts",
    ]
}
